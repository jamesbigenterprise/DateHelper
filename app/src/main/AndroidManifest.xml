<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thiviro.datehelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/date_helper_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/date_helper_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GenderSelector"
                  android:parentActivityName=".ProfileSelector">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfileSelector"/>
        </activity>
        <activity
            android:name=".ProfileSelector"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".QuestionView"></activity>
    </application>

</manifest>